{
    "name": "Demucs",
    "arch": {
        "type": "DemucsSplit",
        "args": {
            "channels": 48
        }
    },
    "dataset": {
        "train": {
            "type": "FastMUSDB",
            "args": {
                "root": "~/Datasets/musdb18hq/",
                "subsets": "train",
                "split": "train",
                "seq_duration": 10,
                "samples_per_track": 150,
                "random": true,
                "random_track_mix": true
            }
        },
        "valid": {
            "type": "FastMUSDB",
            "args": {
                "root": "~/Datasets/musdb18hq/",
                "subsets": "train",
                "split": "valid",
                "seq_duration": 10
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3e-4
        }
    },
    "loss": {
        "type": "L1Loss",
        "args": {}
    },
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "factor": 0.3,
            "patience": 500,
            "verbose": true
        }
    },
    "data_loader": {
        "train": {
            "batch_size": 3,
            "shuffle": true,
            "drop_last": true,
            "num_workers": 2,
            "prefetch_factor": 4,
            "pin_memory": false
        },
        "valid": {
            "batch_size": 4,
            "num_workers": 2,
            "prefetch_factor": 4,
            "pin_memory": false
        }
    },
    "trainer": {
        "epochs": 360,
        "save_dir": "saved/",
        "log_dir": "runs/",
        "cum_steps": 21,
        "patience": 500,
        "amp_enabled": true,
        "val_epoch_length": null,
        "validate_every": 1,
        "targets": [
            "bass",
            "drums",
            "vocals",
            "other"
        ],
        "extra_monitor": [],
        "time_domain": true
    }
}