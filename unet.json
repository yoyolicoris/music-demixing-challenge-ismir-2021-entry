{
    "name": "UNet (Vocals)",
    "arch": {
        "type": "UNet",
        "args": {}
    },
    "dataset": {
        "train": {
            "type": "FastMUSDB",
            "args": {
                "root": "~/Datasets/musdb18hq/",
                "subsets": "train",
                "split": "train",
                "seq_duration": 12.0,
                "samples_per_track": 64,
                "random": true,
                "random_track_mix": true
            }
        },
        "valid": {
            "type": "FastMUSDB",
            "args": {
                "root": "~/Datasets/musdb18hq/",
                "subsets": "train",
                "split": "valid",
                "seq_duration": 12.0
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-4
        }
    },
    "loss": {
        "type": "MDLoss",
        "args": {
            "mcoeff": 10,
            "n_fft": 4096,
            "hop_length": 1024
        }
    },
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "factor": 0.3,
            "patience": 40,
            "verbose": true
        }
    },
    "data_loader": {
        "train": {
            "batch_size": 4,
            "shuffle": true,
            "drop_last": true,
            "num_workers": 4,
            "pin_memory": true
        },
        "valid": {
            "batch_size": 4,
            "num_workers": 4,
            "pin_memory": true
        }
    },
    "trainer": {
        "epochs": 500,
        "save_dir": "saved/",
        "log_dir": "runs/",
        "cum_steps": 1,
        "patience": 1000,
        "amp_enabled": false,
        "val_epoch_length": null,
        "validate_every": 1,
        "targets": [
            "vocals"
        ],
        "n_fft": 4096,
        "hop_length": 1024,
        "extra_monitor": [
            "loss_f",
            "loss_t"
        ]
    }
}